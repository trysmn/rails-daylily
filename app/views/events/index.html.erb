<h1>Events#index</h1>
<p>Find me in app/views/events/index.html.erb</p>

<div class="container">
    <div class="row">
      <% @events.each do |event| %>

      <div class="col-xs-12 col-sm-6 col-md-4, col-lg-3">
        <div class="card text-center">
          <%= link_to event_path(event), class: "a" do %>
            <% photo = event.photos? ? (cl_image_path event.photos[0].path, width: 400, height: 400, crop: :fill) : image_path("event_pic_placeholder.jpg", height: 300, width: 400, crop: :fill) %>
            <div class="card-header" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= photo %>)"></div>
            <div class="card-category"><p class="event-d"><strong>â‚¬<%= event.title %></strong> | <%= event.title %></p></div>

        </div>
      <% end %>
      </div>
      <% end %>
    </div>
  </div>
