<div class="white-container">
  <div class="new-card">
    <div class="row">
      <div class="col-xs-12 col-md-6 col-md-offset-3">
       <h2 class="text-center"><strong>Post your event</strong></h2>

        <%= simple_form_for(@event) do |f| %>
          <% if @event.errors.any? %>
            <div id="error_explanation">
              <ul>
              <% @event.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>


          <div class="form-inputs">

            <%= f.input :title, label: false, placeholder: "Title", input_html: {class: "form-input-lg"} %>
            <%= f.input :description, label: false, placeholder: "Description", input_html: {class: "form-input-lg"} %>
            <%= f.input :address, label: false, placeholder: "First line of address, City", input_html: {class: "form-input-lg"} %>
            <%= f.input :start_date, label: false, placeholder: "Start Date", input_html: {class: "form-input-lg"} %>
            <%= f.input :end_date, label: false, placeholder: "End Date", input_html: {class: "form-input-lg"} %>
            <%= f.input :start_time, label: false, placeholder: "Start Time each day", input_html: {class: "form-input-lg"} %>
            <%= f.input :end_time, label: false, placeholder: "End Time each day", input_html: {class: "form-input-lg"} %>
            <%= f.input :number_of_attendees, label: false, placeholder: "How many people are attending?", input_html: {class: "form-input-lg"} %>
            <%= f.input :entrance_fee, label: false, placeholder: "Entry fee per person", input_html: {class: "form-input-lg"} %>
            <%= f.input :city_airport_id, collection: CityAirport.all.order(:city_name), value_method: :id, label_method: :city_name, label: false, placeholder: "Nearest airport", input_html: {class: "form-control input-lg"} %>
            <%= f.input :website, label: false, placeholder: "Link to the website of the event", input_html: {class: "form-input-lg"} %>
            <%= f.input :photos, as: :attachinary, label: "Upload photos" %>

          </div>

          <div class="form-actions">
            <%= f.button :submit, class: "btn btn-custom btn-fullwidth"  %>
          </div>
        <% end %>
       </div>
      </div>
    </div>
</div>
